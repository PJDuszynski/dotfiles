{
    "git.autofetch": true,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "workbench.startupEditor": "none",
    "editor.fontFamily": "'Hack Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.renderWhitespace": "all",
    "files.exclude": {
        "**/.venv": true
    },
    "editor.accessibilitySupport": "off",
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.mouseWheelZoom": true,
    "editor.rulers": [
        120,
        160
    ],
    "editor.smoothScrolling": true,
    "workbench.tips.enabled": false,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.labelFormat": "long",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.scrollToSwitchTabs": true,
    "workbench.editor.splitSizing": "split",
    "workbench.colorTheme": "The Best Theme",
    "window.closeWhenEmpty": true,
    "window.commandCenter": true,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0.1,
    "explorer.copyRelativePathSeparator": "/",
    "explorer.incrementalNaming": "smart",
    "scm.alwaysShowRepositories": true,
    "scm.defaultViewMode": "tree",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "null",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "null"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.rightClickBehavior": "selectWord",
    "terminal.integrated.tabs.defaultColor": "terminal.ansiBlue",
    "terminal.integrated.tabs.location": "left",
    "terminal.integrated.tabs.showActions": "never",
    "terminal.integrated.tabs.title": "${process} ${task} ",
    "todomd.defaultFile": "${userHome}/todo.md",
    "problems.defaultViewMode": "table",
    "remote.downloadExtensionsLocally": true,
    "audioCues.notebookCellCompleted": "on",
    "audioCues.notebookCellFailed": "on",
    "security.workspace.trust.enabled": false,
    "black-formatter.args": [
        "-l, 120"
    ],
    "black-formatter.showNotifications": "onError",
    "cSpell.userWords": [
        "duszynski, Duszynski"
    ],
    "diffviewer.outputFormat": "line-by-line",
    "git.allowForcePush": true,
    "git.alwaysSignOff": true,
    "git.branchProtection": [
        "main, master"
    ],
    "git.enableCommitSigning": true,
    "git.fetchOnPull": true,
    "git.pruneOnFetch": true,
    "git.pullBeforeCheckout": true,
    "github.gitProtocol": "ssh",
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "merge-conflict.diffViewPosition": "Beside",
    "python.experiments.enabled": false,
    "python.interpreter.infoVisibility": "always",
    "python.linting.banditEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.testing.pytestEnabled": true,
    "r.alwaysUseActiveTerminal": true,
    "r.bracketedPaste": true,
    "r.plot.useHttpgd": true,
    "rainbow_csv.csv_lint_detect_trailing_spaces": true,
    "todomd.addCreationDate": true,
    "todomd.creationDateIncludeTime": true
}